<footer class="footer-section">
  <section class="bg-_main_color_dark pt-[28px] pb-8 sm:px-4">
    <div class="desktop-width">
      <div id="logo-footer" class="logo flex justify-center sm:max-w-[20rem] w-full mb-5">
        <a href="/"><img src="{{'logo.svg' | asset_url}}" alt="" height="auto" width="auto"></a>
      </div>
      <div id="items-footer" class="items text-white md:flex justify-around flex-wrap gap-6 hidden">
        <div class="item flex flex-col gap-4 items-center">
          <p class="text-_orange_color">{{ section.settings.footer-text }}</p>
          <div class="flex items-center gap-4 justify-center">
            <a href="https://www.facebook.com/profile.php?id=100091959369506"><img src="{{'fb.svg' | asset_url}}" alt="facebook" height="auto" width="auto"></a>
            <a href="https://instagram.com/bahwai.fr"><img src="{{'insta.svg' | asset_url}}" alt="instagram" height="auto" width="auto"></a>
            <a href="https://www.tiktok.com/@bahwai.fr?_t=8dqo9b4vRAh&_r=1"><img src="{{'tiktok.svg' | asset_url}}" alt="tiktok" height="auto" width="auto"></a>
          </div>
          <p class="text-white">Développé avec ❤️ par Linnovlab
          </p>
        </div>
        <div class="item">
          <h4 class="font-bold border-b-2 border-gray-400  mb-4">Contact</h4>
          <ul>
            <li><a href="{{ pages.contact.url }}">Nous contacter</a></li>
            <li><a href="{{ pages.partenaire.url }}">Devenir partenaire</a></li>
          </ul>
        </div>
        <div class="item">
          <h4 class="font-bold border-b-2 border-gray-400  mb-4">Parcourir</h4>
          <ul>
            {% for link in linklists['footer-2'].links %}
              <li>
                <a href="{{ link.url }}">{{ link.title }}</a>
              </li>
            {% endfor %}
          </ul>
        </div>
        <div class="item">
          <h4 class="font-bold border-b-2 border-gray-400  mb-4">Pour les curieux !</h4>
          <ul>
            {% for link in linklists['footer'].links %}
              <li>
                <a href="{{ link.url }}">{{ link.title }}</a>
              </li>
            {% endfor %}
          </ul>
        </div>
        <div class="item">
          <h4 class="font-bold border-b-2 border-gray-400 mb-4">Moyens de paiement acceptés</h4>
          <div class="imgs flex items-center gap-4">
            <span><img
                class="w-[4rem]"
                src="{{ 'mastercard.png' | asset_url }}"
                alt="martercard"
                title="martercard"
                loading="lazy"
                width="auto"
                height="auto"></span>
            <span><img
                class="w-[4rem]"
                src="{{ 'visa.png' | asset_url }}"
                alt="visa"
                title="visa"
                loading="lazy"
                width="auto"
                height="auto"></span>
            <span><img
                src="{{ 'paypal.png' | asset_url }}"
                class="w-[4rem]"
                alt="paypal"
                title="paypal"
                loading="lazy"
                width="auto"
                height="auto"></span>
          </div>
        </div>
      </div>
    </div>
    <!-- footer mobile -->
    <div class="footer-mobile md:hidden">
      <div class="flex flex-col gap-4 items-center">
        <p class="text-_orange_color">{{ section.settings.footer-text }}</p>
