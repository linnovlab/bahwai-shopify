<div class="mt-20 text-_main_color_dark">

	<div id="form-recover" class="content hidden sm:max-w-[25rem] max-w-[100%] mx-8 sm:mx-auto">
		{%- form 'recover_customer_password' -%}
		{% assign recover_success = form.posted_successfully? %}
		<div class="field">
			<input class="input mb-4 focus:border-_orange_color transition-all duration-300" type="email" value=""
				name="email" id="RecoverEmail" autocorrect="off" autocapitalize="off" autocomplete="email" {% if
				form.errors %} aria-invalid="true" aria-describedby="RecoverEmail-email-error" autofocus {% endif %}
				placeholder="Email">
		</div>
		{%- if form.errors -%}
		<p class="text-red-600 text-xl text-center">{{ form.errors.messages.form }}</p>
		{%- endif -%}

		<button type="submit" class="btn mb-4 py-2 text-white mx-auto mt-4">
			Récupérer
		</button>

		<p class="text-center w-[4.5rem] mx-auto text-_main_color_dark border-b border-_main_color_dark">
			<a href="#cancel" id="cancel" class="hover:text-_orange_color transition-all duration-300 text-center">
				Annuler
			</a>
		</p>
		{%- endform -%}
	</div>

	<div id="form-login" class="content sm:max-w-[25rem] max-w-[100%] mx-8 sm:mx-auto">
		<h1 class="title mb-8">Mon compte</h1>
		{% form 'customer_login', novalidate: 'novalidate' %}
		{{ form.errors | default_errors }}
		<div id="form-connexion" class="w-full  flex flex-col items-center gap-4">
			<div class="item w-full">
				<input class="input focus:border-_orange_color transition-all duration-300" type="email"
					placeholder="{{ 'customer.login_page.email' | t }}" name="customer[email]" required>
			</div>
			<div class="item w-full relative">
				<input id="input-password" class="input focus:border-_orange_color transition-all duration-300"
					type="password" placeholder="Mot de passe" name="customer[password]" required>
				<i class="fas fa-eye absolute hover:cursor-pointer" id="eye-password"></i>
			</div>
			<div class="flex flex-col items-center mt-8">
				<button type="submit" class="btn mb-4 py-2 text-white">Se connecter</button>
				<p class="text-_main_color_dark border-b border-_main_color_dark hover:border-_orange_color">
					<a id="recover" href="#recover" class="hover:text-_orange_color transition-all duration-300">Mot de
						passe oublié ?
					</a>
				</p>
			</div>
		</div>
		{% endform %}
	</div>


	<style>
		@media screen and (max-width: 640px) {
			.inscription-section {
				background-image: url('{{ ' imageconnexionsm.png' |asset_url }}');
			}
		}
	</style>
	<section style="background-image: url('{{ 'imageconnexion.png' |asset_url }}');"
		class="inscription-section relative z-50 sm:h-[40rem] h-[27rem] text-_main_color_dark flex flex-col justify-center items-center gap-6 img-center mt-8 py-8">
		<h2 class="title">Nouveau chez Bahwai ?
		</h2>
		<p class="text-center ">Profitez de codes promo et de produits réservés aux membres en étant membre Bahwai</p>
		<p>
			<a href="{{ routes.account_register_url }}" class="btn">Créer mon compte
			</a>
		</p>
	</section>
</div>