<section class="avis my-4 sm:px-8 p-0 desktop-width">
  <h2 class="title">{{ section.settings.titre }}
  </h2>
  <div class="avis-container flex justify-around gap-4 mt-8 mb-16  ">
    <div id="swiper-avis" class="swiper swiper-avis relative">
      <div class="swiper-wrapper sm:ps-0">
        {% for block in section.blocks %}
          <div class="swiper-slide">
            <div class="avis-item flex flex-col gap-2 sm:max-w-[306px] w-full rounded-sm">
              <div class="flex">
                <img
                  src="{{ block.settings.user_img }}"
                  alt="profile"
                  class="rounded-[50%] me-2 w-12 h-auto">
                <div class="flex justify-between w-full">
                  <div class="">
                    <h5 class="font-bold text-black">Cristopher Teyssier</h5>
                    <p class="text-gray-500 text-sm">6. juin, 2022.</p>
                  </div>
                  <img
                    src="{{ block.settings.google_img }}"
                    alt="google"
                    class="w-6 self-start">
                </div>
              </div>
              <div class="stars">
                <i class="fas fa-star text-yellow-300"></i>
                <i class="fas fa-star text-yellow-300"></i>
                <i class="fas fa-star text-yellow-300"></i>
                <i class="fas fa-star text-yellow-300"></i>
                <i class="fas fa-star text-yellow-300"></i>
              </div>
              <div class="comment max-h-[8rem] h-full overflow-y-scroll scrolbar-thin">
                <p class="text-base">Lorem ipsum dolor sit amet consectetur adipisicing elit. Quasi soluta 
                  inventore perspiciatis cupiditate mollitia laudantium unde                                                                                                                                      adipisci cum aspernatur ad.</p>
              </div>
            </div>
          </div>
        {% endfor %}

      </div>
    </div>
  </div>
  <div></div>
</section>

{% schema %}
  {
    "name": "Avis clients",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "text",
        "id": "titre",
        "label": "Titre",
        "default": "Leurs avis"
      }
    ],
    "max_blocks": 10,
    "blocks": [
      {
        "name": "avis",
        "type": "block_avis",
        "settings": [
          {
            "type": "image_picker",
            "id": "user_img",
            "default": "{{ 'happy-gb91b7054f_640.jpg' | asset_url }}",
            "label": "profile imgae"
          }, {
            "type": "image_picker",
            "id": "google_img",
            "default": "{{ 'google.svg' | asset_url }}",
            "label": "Google logo"
          }
        ]
      }
    ]
  }
{% endschema %}