{% schema %}
  {
    "name": "Avis",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Titre"
      }
    ],
    "max_blocks": 5,
    "blocks": [
      {
        "name": "Announcement",
        "type": "announcement",
        "settings": [
          {
            "type": "text",
            "id": "heading",
            "default": "Welcome to our store",
