<style>
  @media screen and (max-width: 640px) {
    .banner-blog {
      background-image: url('{{ 'bannerblogsm.png' |asset_url }}');
    }
  }
</style>
<div style="background-image: url('{{ 'bannerblog.png' |asset_url }}');" class="banner-blog  img-center sm:h-[20rem] h-[14rem]"></div>

<section class="engagment mt-8 mb-4">
  <div class="text-_main_color_dark my-8 mx-8">
    <h2 class="title mb-8">{{ page.title | escape }}</h2>

  </div>
  <div class="text-_main_color_dark my-8 mx-8">
    {{ page.content | replace: "<p>", "<p class='mb-4 leading-normal text-[16px]'>" | replace: "<h2>", "<h2 class='text-[24px] font-bold mb-4'>" | replace: "<li>", "<li class='list-disc'>" }}
  </div>

</section>



{% schema %}
  {
    "name": "t:sections.main-page.name",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      }, {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }
    ]
  }
{% endschema %}