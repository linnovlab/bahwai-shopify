<style>
  @media screen and (max-width: 640px) {
    .banner-blog {
      background-image: url('{{ 'bannerblogsm.png' |asset_url }}');
    }
  }
</style>
<div style="background-image: url('{{ 'bannerblog.png' |asset_url }}');" class="banner-blog  img-center sm:h-[20rem] h-[14rem]"></div>

<section class="engagment mt-8 mb-4">
  <div class="text-_main_color_dark my-8 mx-8">
    <h2 class="title mb-8">{{ page.title | escape }}</h2>

  </div>
  {{ page.content }}
</section>

<div class="page-width page-width--narrow section-{{ section.id }}-padding">
  {% comment %} <h1 class="main-page-title page-title h0">
  {{ page.title | escape }}
  </h1> {% endcomment %}<div class="rte">
    {{ page.content }}
  </div>
</div>

{% schema %}
  {
    "name": "t:sections.main-page.name",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      }, {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }
    ]
  }
{% endschema %}