<section
  style="background-image: url('{{ 'Orange.png' |asset_url}}');"
  class="partenaire text-white flex flex-col justify-center items-center gap-6 img-center my-8 py-8 px-[10px]">
  <h2
    class="title-white">{{ section.settings.title }}</h2>
  <p
    class="text-center sm:text-base text-sm">
    Tu souhaites proposer nos produits ou devenir notre égérie ?
    <span
      class="text-xs">BahWai</span>
    laisses nous un message avec tes coordonnées et ton projet. Nous te recontacterons dans les 48h
  </p>
  <p>
    <a
      href="{{ pages.partenaire.url }}"
      class="btn">{{ section.settings.btn_text }}</a>
  </p>
</section>

{% schema %}
  {
    "name": "Section",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Titre",
        "default": "Rejoint la famille"
      }, {
        "type": "richtext",
        "id": "description",
        "label": "Description",
        "default": "<p>Vous avez envie de rejoindre l’aventure Bahwai ?  Faites confiance à notre expertise</p>"
      }, {
        "type": "text",
        "id": "btn_text",
        "label": "Button",
        "default": "Remplir le formulaire "
      }
    ]
  }
{% endschema %}