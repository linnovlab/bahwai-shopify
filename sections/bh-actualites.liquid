<section class="actualites sm:m-4 m-0 desktop-width">
  <h2 class="title">{{ section.settings.title }}</h2>
  <div class="actu-container mt-8">
    <div class="swiper swiper-actu relative sm:!pe-0 !pe-8">
      <div class="swiper-wrapper">
        {% for article in blogs.news.articles %}
          <div class="swiper-slide ">
            <div class="actu-item">
              <div style="background-image: url('{{ article.image | image_url: width: 900 }}');" class="img img-center flex items-end mb-4 h-[10rem]">
                <div class="flex w-full h-10 justify-between items-center text-white text-[12px] bg-[#ffffff4d] px-4">
                  <p>{{ article.published_at | date: "%d %B %Y" | locale: "fr" }}</p>
                  <p>Actualité</p>
                </div>
              </div>
              <div class="desc text-sm">
                <h5 class="font-bold text-_main_color_dark text-base">{{ article.title | strip_html | truncatewords: 8 }}</h5>
                <p class="text-gray-400">{{ article.content | strip_html | truncatewords: 30 }}</p>
                <a href="{{ article.url }}" class="flex gap-2 mt-8 text-_main_color_dark hover:text-_orange_color transition-all duration-500">
                  <span class="font-bold">Lire le blog</span>
                  <img
                    src="{{ 'arrow-right.svg' | asset_url }}"
                    alt="arrow right"
                    class="mb-4"
                    width="auto"
                    height="auto"
                    loading="lazy">
                </a>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
  <div class="flex justify-center mt-16">
    <a href="{{ blogs.news.url }}" class="btn">{{ section.settings.btn_text }}</a>
  </div>
</section>

{% schema %}
  {
    "name": "Section",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Titre",
        "default": "Nos actualités"
      }, {
        "type": "text",
        "id": "btn_text",
        "label": "Button",
        "default": "Voir les actualités"
      }

    ]
  }
{% endschema %}